<div class="card">
  {{#if image}}
  <div class="card-image">
    <figure class="image is-256x256">
      <img src={{image}}>
    </figure>
  </div>
  {{/if}}
  <div class="card-content">
    {{#if image}}
    <form action="/category/deleteimage/{{_id}}" method="GET">
      <button type="submit" class="button is-danger is-light is-fullwidth">Delete Image</button>
    </form>
    {{else}}
    <form action="/category/uploadimage/{{_id}}" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label">
          <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a file
            </span>
          </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-info">Upload</button>
      </div>
    </form>
    {{/if}}
  </div>
</div>
<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>